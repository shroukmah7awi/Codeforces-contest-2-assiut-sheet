
using namespace std;
#include <iostream>
#include <algorithm>
#include <vector>
#include <iomanip> 
#include<cmath>
#include<bitset>

long long sum(long long n)
{
    return n * (n + 1) / 2;
}


int main()
{
    int N;
    cin >> N;

    while (N--)
    {
   
        long long L, R;
        cin >> L >> R;

        long long left = min(L, R);
        long long right = max(L, R);

        cout << sum(right) - sum(left - 1) << endl;
    }
     
}

